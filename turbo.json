{
	"$schema": "https://turborepo.org/schema.json",
	"baseBranch": "origin/main",
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["../dist/**"]
		},
		"test": {
			"dependsOn": ["build"],
			"outputs": [],
			"inputs": [
				"src/**/*",
				"src/**/*",
				"test/**/*",
				"test/**/*",
				"static/**/*"
			]
		},
		"install": {
			"dependsOn": [],
			"outputs": []
		},
		"//#install": {
			"dependsOn": [],
			"outputs": []
		},
		"deploy": {
			"dependsOn": ["build"],
			"outputs": []
		}
	}
}
